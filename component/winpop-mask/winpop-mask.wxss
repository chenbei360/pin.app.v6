/*error start*/
.winpop-mask {
    left: 0;
    top: 0;
    z-index: 99999;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: .6;
}

.winpop-box, .winpop-mask {
    display: none;
    position: fixed;
}

.winpop-box {
    left: 50%;
    top: 50%;
    z-index: 999999;
    -webkit-transform: translate3d(-50%,-50%,0);
    webkit-transform: translate3d(-50%,-50%,0);
    width: 80%;
    height: 30%;
    border-radius: 10rpx;
    background-color: #fff;
}

.winpop-box, .winpop-mask {
    display: none;
    position: fixed;
}

.winpop-box .winpop-main {
    height: 75%;
    overflow: hidden;
    text-wrap: normal;
    line-height: 48rpx;
    color: #666;
    padding: auto;
    text-align: center;
    vertical-align: center;
    font-size: 36rpx;
    position: relative;
}

.winpop-box .winpop-main .co-main-words {
    position: absolute;
    top: 50%;
    left: 50%;
    text-align: center;
    width: 90%;
    -webkit-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
}


.winpop-box .winpop-btns {
    text-align: center;
    height: 25%;
    z-index: 999999999;
    border-top: 1px solid #999;
}

.winpop-box .pop-btn {
    width: 80%;
    height: 70rpx;
    border-radius: 10rpx;
    background-color: transparent;
    border: 0 solid #df0a17;
    font-family: Microsoft Yahei;
    color: #df0a17;
    font-size: 32rpx;
}

button::after {
    border: none;
}
/*error end*/


.winpop-box .pop-btn2 {
    width: 50%;
    height: 100%;
    background-color: transparent;
    border: 0 solid #df0a17;
    font-family: Microsoft Yahei;
    color: #df0a17;
    font-size: 32rpx;
    position: relative;
    display: inline-block;
    border-radius: 0!important;
    border-right: 1px solid #aaa;
    border-radius: 0;
}



