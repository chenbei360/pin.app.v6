/* component/qrcode-poster/qrcode-poster.wxss */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-wrap{
  position: fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}
.modal-dialog {
  width: 90%;
  max-height: 100%;
  overflow-y: scroll;
  background: #fff;
  border-radius: 20rpx;
  padding-bottom:350rpx;
  text-align: center;
  position: relative;
}

.goods-cover{
  /* width:380rpx; */
  height:380rpx;
  object-fit: cover;
  margin:0 auto;
  margin-top:80rpx;
  width:100%;
}

.modal-footer{
  position: absolute;
  bottom: 30rpx;
  text-align: center;
  width:100%;
}
.modal-footer .text{
  font-size: 22rpx;
  color:#adadad;
  text-align: center;
  padding-top:30rpx;
}

.goods-info{
  padding:30rpx;
  position:relative;
}

.goods-info .title-1, .goods-info .title-2{
  color:#343434;
  font-size:26rpx;
  position: absolute;
  left:30rpx;
  top:30rpx;
}

.goods-info .title-2{
  top:66rpx;
}

.goods-info .price{
  color:#ff5b4c;
  font-size:26rpx;
  position: absolute;
  right:30rpx;
  top:30rpx;
}

.dash-line{
  margin:0 30rpx;
  margin-top:70rpx;
  height: 2rpx;
  border-bottom: 1rpx dashed #e9e9e9;
}
.qrcode-info-wrap
{
  margin-top:20rpx;
  position: relative;
}
.qrcode{
  width:180rpx;
  height:180rpx;
  position: absolute;
  left:30rpx;
}

.ps-wrap{
  color:#6b6b6b;
  font-size: 26rpx;
  position: absolute;
  top:50rpx;
  text-align: left;
  left:300rpx;
}

.ps-wrap .text{
  padding-top:0rpx;
}

.modal-dialog .close{
  position: absolute;
  top:10rpx;
  right:10rpx;
  width:60rpx;
  height:60rpx;
  text-align: center;
}

.close image{
  width:40rpx;
  height:40rpx;
}

.save-btn{
  background:#ff5b4c;
  font-size: 24rpx;
  text-align: center;
  color:#fff;
  width:60%;
  height: 70rpx;
  border-radius: 40rpx;
  line-height: 70rpx;
}
.goods-info .text-center{
  left:0;
  width:100%;
  text-align: center;
}