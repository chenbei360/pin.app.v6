/* component/group-help/group-help.wxss */
.group-detail .notice-pop-container {
    position: fixed;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    z-index: 10001;
}
.group-detail-notice-container {
    position: relative;
}

.group-detail .notice-pop-container {
    position: fixed;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    z-index: 10001;
}

.group-detail .notice-pop-container .notice-pop .mask {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: .7;
}

.group-detail .notice-pop-container .notice-pop-content {
    background-color: #fff;
    width: 290px;
    height: 235px;
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
    padding: 0 15px;
    border-radius: 8px;
    box-sizing: border-box;
}

.group-detail .notice-pop-container .notice-pop-content:before {
    content: "";
    font-size: 10px;
    color: #9c9c9c;
    top: -5px;
    right: -5px;
    z-index: 2;
}

.group-detail .notice-pop-container .notice-pop-content:after, .group-detail .notice-pop-container .notice-pop-content:before {
    line-height: 1;
    font-weight: 400;
    -webkit-font-smoothing: antialiased;
    font-family: icomoon;
    position: absolute;

    box-sizing: border-box;
}

.group-detail .notice-pop-container .notice-pop-list {
    font-size: 13px;
    color: #58595b;
    padding-top: 6px;
    line-height: 31px;
}

.group-detail .notice-pop-container .notice-pop-list .li {
    position: relative;
    padding-left: 22px;
    display:inline-block;
}

.group-detail .notice-pop-container .notice-pop-list .li:before {
    background: #9c9c9c;
    content: "";
    width:  3px;
    height: 3px;
    border-radius: 100%;
    position: absolute;
    top: 15px;
    left: 8px;
}

.group-detail .notice-pop-container .notice-pop-content:after {
    content: "";
    font-size: 30px;
    color: #e0e0e0;
    top: -15px;
    right: -15px;
    width: 30px;
}


.goods-recommend-bottom {
    height: 50px;
    width: 100%;
    line-height: 50px;
    text-align: center;
}

.goods-recommend-bottom .goods-recommend-line {
    border-bottom: 1px solid #e0e0e0;
    height: 25px;
    width: 90%;
    margin-left: auto;
    margin-right: auto;
}

.goods-recommend-bottom .p {
    position: relative;
    top: -25px;
    width: 136px;
    font-size: 14px;
    color: #9c9c9c;
    margin-left: auto;
    margin-right: auto;
    background-color: #eceded;
    display: block;
}

.group-detail .notice-pop-container .notice-pop-title {
    width: 100%;
    height: 55px;
    padding-top: 18px;
    margin-bottom: 15px;
    text-align: center;
    color: #151516;
    font-size: 16px;
    border-bottom: 1px solid #e0e0e0;
}