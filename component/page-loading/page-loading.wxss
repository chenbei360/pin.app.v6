/* component/page-loading/page-loading.wxss */
.page-loading .ps-rotate-img {
  width:  25px;
  height: 25px;
  margin: auto;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  animation: rotateImg 2.5s linear infinite;
  -webkit-animation: rotateImg 2.5s linear infinite;
  z-index: 9999999999;
  position: absolute;
}
@keyframes rotateImg {
    0% {
        transform: rotateZ(0deg);
    }
    50% {
        transform: rotateZ(180deg);
    }
    100% {
        transform: rotateZ(360deg);
    }
}
.page-loading {
    position: fixed;
    width: 66px;
    height: 66px;
    top: 35%;
    margin: 0 auto;
    left: 0;
    right: 0;
    z-index: 999999999;
}
.ps-background {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0.7;
    background-color: #000;
    border-radius: 9px;
}