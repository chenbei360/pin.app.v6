    margin-top: 30rpx;
}

.order_hd {
    background-color: #fafafb;
    border-bottom: 2rpx solid #d5d5d5;
    border-top: 2rpx solid #e4e4e4;
    height: 78rpx;
    line-height: 78rpx;
    overflow: hidden;
    padding: 0 20rpx;
}

.order_bd {
    padding: 0 20rpx;
