}

.order_btn {
    float: right;
}

.order_btn .a {
    float: left;
    width: 160rpx;
    height: 60rpx;
    background-color: #4b4b4b;
    line-height: 60rpx;
    border-radius: 9rpx;
    color: #fff;
    margin-left: 10rpx;
    text-align: center;
}

.order_opt:after {
    content: '';
    display: block;
    clear: both;
    height: 0;
