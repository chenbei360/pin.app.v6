    z-index: 9999;
    top: 0;
    max-width: 1280rpx;
}
.nav_txt {
    position: relative;
}

.nav_cur {
    border-bottom: 4rpx solid #e02e24;
    color: #e02e24;
}

.fixed_nav_item {
    height: 80rpx;
    line-height: 80rpx;
    width: 33.33%;
    float: left;
    display: block;
    box-sizing: border-box;
    border-right: 2rpx solid #ccc;
    border-bottom: 2rpx solid #ccc;
}

#dealliststatus1 {
    font-size: 24rpx;
