.order_goods {
    position: relative;
    padding: 30rpx 0;
    padding-left: 150rpx;
    font-size: 24rpx;
    border-bottom: 2rpx solid #d7d7d7;
    min-height: 120rpx;
}
.order_goods_img {
    position: absolute;
    top: 30rpx;
    left: 0;
}

.order_goods_img .img {
    display: block;
    width: 120rpx;
    height: 120rpx;
    border: 2rpx solid #d7d7d7;
}

.order_goods_info {
    position: relative;
}

.order_goods_name {
    max-height: 60rpx;
    color: #000;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-bottom: 10rpx;
    line-height: 30rpx;
    white-space: nowrap;
    word-break: break-all;
    word-wrap: break-word;
}

.order_goods_attr {
    color: #666;
