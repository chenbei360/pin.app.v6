}

.order_goods_attr_item {
    line-height: 44rpx;
    overflow: hidden;
    height: 48rpx;
}

.order_goods_attr_item:after {
    clear: both;
    content: "";
    display: block;
    height: 0;
    visibility: hidden;
}

.order_ft {
    padding: 20rpx;
}

.order_total {
    font-size: 24rpx;
    height: 32rpx;
