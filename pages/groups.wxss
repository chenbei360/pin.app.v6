page{
  height: 100%;
  background: #eceded;
}

.groups_line {
    width: 100%;
    height: 34rpx;
    background: #f1f1f1;
    border: 1px solid #eee;
}

.mt_g {
    border-bottom: 1px solid #d7d7d7;
    height: 182rpx;
    margin: 0 20rpx;
    /*padding: 15px 0 15px 70px;*/
    position: relative;
}

.mt_g, .mt_order {
    background-color: #fff;
}

.mt_g_img {
    left: 0;
    position: absolute;
    top: 30rpx;
}

.mt_g_img .img {
    border: 1px solid #d7d7d7;
    display: block;
    height: 116rpx;
    overflow: hidden;
    width: 116rpx;
}

.mt_g_info {
    font-size: 24rpx;
    padding-top: 4rpx;
}

.mt_g_name, .prize {
    display: inline-block;
}

.mt_g_name {
    color: #333;
    height: 36rpx;
    line-height: 36rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-break: break-all;
    word-wrap: break-word;
    width: 70%;
    vertical-align: middle;
    padding: 30rpx 0 30rpx 140rpx;
}

.mt_g_price {
    background-color: #3e3e3e;
    bottom: 36rpx;
    color: #fff;
    font-size: 26rpx;
    height: 52rpx;
    left: 140rpx;
    line-height: 52rpx;
    margin-left: 20rpx;
    padding-left: 60rpx;
    position: absolute;
    width: 310rpx;
}


.mt_g_price:before, .mt_g_price .i:before {
    background-image: url(http://139.199.168.122:8989/Public/Api/images/bg_v6_afc11c.png);
    background-repeat: no-repeat;
    background-size: 730rpx 980rpx;
}

.mt_g_price:before {
    background-position: -570rpx 0;
    content: " ";
    height: 68rpx;
    left: -20rpx;
    position: absolute;
    top: -8rpx;
    width: 68rpx;
}

.mt_g_price .span {
    font-size: 18rpx;
    vertical-align: middle;
    display: inline-block;
    height: 52rpx;
    line-height: 52rpx;
    margin-top: -8rpx;
}

.mt_g_price .span .b {
    font-size: 32rpx;
    font-weight: 400;
}

.small {
    font-size: 80%;
}

.mt_status {
    height: 100rpx;
    padding: 0 20rpx;
}

.mt_status_txt {
    color: #e02e24;
    float: left;
    line-height: 100rpx;
    font-size: 24rpx;
}


.mt_status_lk1 {
    border: 1px solid #999;
    border-radius: 3px;
    color: #6b6b6b;
    float: right;
    height: 58rpx;
    line-height: 58rpx;
    margin-top: 18rpx;
    padding: 0 20rpx;
    font-size: 24rpx;
}

.marg_right {
    margin-right: 20rpx;
}

.mt_g_price .i {
    background-color: #e02e24;
    border-bottom-right-radius: 26rpx;
    border-top-right-radius: 26rpx;
    display: block;
    height: 52rpx;
    position: absolute;
    right: -52rpx;
    top: 0;
    width: 52rpx;
}


.mt_g_price:before, .mt_g_price .i:before {
    background-image: url(http://139.199.168.122:8989/Public/Api/images/bg_v6_afc11c.png);
    background-repeat: no-repeat;
    background-size: 730rpx 980rpx;
}

.mt_g_price .i:before {
    background-position: -418rpx -118rpx;
    content: " ";
    height: 24rpx;
    position: absolute;
    right: 20rpx;
    top: 14rpx;
    width: 16rpx;
}

.con {
    background: none repeat scroll 0 0 #f7f7f7;
    overflow: hidden;
}

.mt_nogroups {
    padding: 20rpx;
    text-align: center;
    position: absolute;
    top: 40%;
    width: 100%;
    z-index: 1000;
    font-size: 36rpx;
}

.mt_nogroups .h4 {
    font-weight: 400;
}